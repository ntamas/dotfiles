# MS documents
application/msword; ~/.mutt/view_attachment.sh %s "-" '/Applications/LibreOffice.app'
application/vnd.openxmlformats-officedocument.wordprocessingml.document; ~/.mutt/view_attachment.sh %s docx '/Applications/LibreOffice.app'
application/vnd.openxmlformats-officedocument.presentationml.document; ~/.mutt/view_attachment.sh %s pptx '/Applications/LibreOffice.app'
application/vnd.openxmlformats-officedocument.spreadsheetml.document; ~/.mutt/view_attachment.sh %s xlsx '/Applications/LibreOffice.app'

# Images
image/jpg; ~/.mutt/view_attachment.sh %s jpg
image/jpeg; ~/.mutt/view_attachment.sh %s jpg
image/pjpeg; ~/.mutt/view_attachment.sh %s jpg
image/png; ~/.mutt/view_attachment.sh %s png
image/gif; ~/.mutt/view_attachment.sh %s gif

# PDFs
application/pdf; ~/.mutt/view_attachment.sh %s pdf

# HTML
text/html; ~/.mutt/view_attachment.sh %s html

# Unidentified files
application/octet-stream; ~/.mutt/view_attachment.sh %s "-"
application/binary; ~/.mutt/view_attachment.sh %s "-"
